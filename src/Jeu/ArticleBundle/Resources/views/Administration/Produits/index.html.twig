{% extends '::layoutAdmin.html.twig' %}

{% block body -%}
    <div class="tile is-ancestor">
        <div class="tile is-parent is-12">
            <article class="tile is-child box is-12">
                <h2 class="title is-3 indieflower">Liste des Produits</h2>
				Nombre total de produits : {{ entities|length }}
            </article>
        </div>
		
    </div>

    <div class="tile is-ancestor">
        <div class="tile is-parent is-12">
            <article class="tile is-child box is-12">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Categorie</th>
                            <th>Nom</th>
                            <th>Prix</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td>{% for cat in entity.categories %}{{ cat.name }},{% endfor %}</td>
                                <td>{{ entity.titre }}</td>
                                <td>{{ entity.prix }} â‚¬</td>
                                <td>
                                    <a href="{{ path('adminProduits_show', { 'id': entity.id }) }}">voir</a> /
                                    <a href="{{ path('adminProduits_edit', { 'id': entity.id }) }}">editer</i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <ul class="has-text-right">
                    <li>
                        <a href="{{ path('adminProduits_new') }}" class="button button-vert is-outlined">Ajouter un nouveau produit</a>
                    </li>
                </ul>
            </article>
        </div>
    </div>


        <div class="tile is-ancestor">
            <div class="tile is-parent is-12">
                <article class="tile is-child box is-12">
					  {% if entities is not empty %}
					  <ul class="pagination">
						{% for p in range(1, nbPages) %}
						  <li{% if p == page %} class="active"{% endif %}>
							<a href="{{ path('adminProduits_index', {'page': p}) }}">{{ p }}</a>
						  </li>
						{% endfor %}
					  </ul>
					  {% endif %}
                </article>
            </div>
        </div>

{% endblock %}